<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/Result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:singleLine="true"
            android:background="#ca381919"
            android:textColor="#190000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="AC"
                android:id="@+id/buttonClear"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onClicked"
                android:background="#190000"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="+/-"
                android:id="@+id/buttonSign"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="30dp"
                android:nestedScrollingEnabled="false"
                android:onClick="onSignClicked"
                android:background="#190000"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="%"
                android:id="@+id/buttonPercent"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onOperClicked"
                android:background="#190000"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/buttonDiv"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onOperClicked"
                android:background="#190000"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/linear3">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#FF381111"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/button8"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#ca381919"
                android:textColor="#fcf9f9" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/button9"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#FF381111"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="X"
                android:id="@+id/buttonMul"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onOperClicked"
                android:background="#190000"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:id="@+id/linear4">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#ca381919"
                android:textColor="#fcf9f9" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/button5"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#FF381111"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/button6"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#ca381919"
                android:textColor="#fcf9f9" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/buttonSub"
                android:textStyle="bold"
                android:textSize="40dp"
                android:onClick="onOperClicked"
                android:background="#190000"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/button1"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#FF381111"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/button2"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#ca381919" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/button3"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:background="#FF381111"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onOperClicked"
                android:background="#190000"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            >
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/button0"
                android:textSize="30dp"
                android:onClick="onNumberClicked"
                android:textColor="#fcf9f9"
                android:background="#190000" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=","
                android:id="@+id/buttonComma"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onCommaClicked"
                android:textColor="#190000"
                android:background="#ca381919" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/buttonEq"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onOperClicked"
                android:background="#190000"
                android:textColor="#ffffff" />
        </LinearLayout>


    </LinearLayout>






</RelativeLayout>
